<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <PackageRequireLicenseAcceptance>false</PackageRequireLicenseAcceptance>
  </PropertyGroup>
  
  <PropertyGroup>
    <Description>Provides a set of Exception oriented extension methods methods extending from Xunit.</Description>
    <TargetFramework>netstandard1.1</TargetFramework>
    <Version>1.0.0.2491</Version>
    <AssemblyVersion>1.0.0.2491</AssemblyVersion>
    <FileVersion>1.0.0.2491</FileVersion>
    <PackageVersion>1.0.0.2491</PackageVersion>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Platform)'=='AnyCPU'">
    <GenerateDocumentationFile>true</GenerateDocumentationFile>
    <DocumentationFile>bin\$(Configuration)\netstandard1.1\xunit.fluently.assert.exceptionally.xml</DocumentationFile>
  </PropertyGroup>

  <!-- ReSharper disable UnknownProperty -->
  <ItemGroup>
    <PackageReference Include="xunit.assert" Version="$(XunitVersion)" />
  </ItemGroup>
  <!-- ReSharper restore UnknownProperty -->

</Project>
